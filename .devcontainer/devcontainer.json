{
  "name": "Python Dev (Universal Image)",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    }
  },
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance",
    "ms-toolsai.jupyter",
    "ms-python.black-formatter",
    "ms-python.isort",
    "formulahendry.code-runner"
  ],
  "postCreateCommand": "python3 --version && pip install --upgrade pip"
}
